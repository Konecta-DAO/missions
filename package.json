{
  "name": "vite-react-motoko",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "setup": "npm i && dfx canister create backend && dfx generate backend && dfx deploy",
    "start": "run-p frontend backend",
    "frontend": "vite --config vite.config.ts --port 3000",
    "admin_frontend": "vite --config vite.config.ts --port 3001",
    "backend": "mo-dev --generate --deploy -y",
    "build:frontend": "BUILD_TARGET=frontend vite build --config vite.config.ts --mode frontend",
    "build:admin": "BUILD_TARGET=admin vite build --config vite.config.ts --mode admin",
    "build": "tsc && npm run build:frontend && npm run build:admin && npm run copy-well-known",
    "copy-well-known": "copyfiles -u 1 src/.well-known/**/* dist/",
    "format": "prettier --write \"src/**/*.{json,js,jsx,ts,tsx,css,scss}\" \"backend/**/*.mo\"",
    "sources": "mops sources",
    "postinstall": "mops install"
  },
  "dependencies": {
    "@dfinity/agent": "^2.0.0",
    "@dfinity/auth-client": "^2.0.0",
    "@dfinity/candid": "^2.0.0",
    "@dfinity/principal": "^2.0.0",
    "@ic-reactor/react": "^1.8.2",
    "@nfid/embed": "^0.10.3",
    "@open-ic/openchat-xframe": "^1.0.6",
    "chart.js": "^4.4.4",
    "crypto-js": "^4.2.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-datepicker": "^7.3.0",
    "react-dom": "^18.3.1",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "usergeek-ic-js": "^1.0.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/crypto-js": "^4.2.2",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "copyfiles": "^2.4.1",
    "cross-fetch": "^4.0.0",
    "dotenv": "^16.4.5",
    "ic-mops": "^0.45.3",
    "jsdom": "^24.1.1",
    "mo-dev": "^0.13.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "sass": "^1.77.8",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vite-plugin-environment": "^1.1.3",
    "vite-plugin-static-copy": "^1.0.6",
    "vitest": "^2.0.5"
  },
  "resolutions": {
    "@dfinity/candid": "2.0.0"
  }
}
