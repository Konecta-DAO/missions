{
  "name": "vite-react-motoko",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "setup": "npm i && dfx canister create backend && dfx generate backend && dfx deploy",
    "start:frontend": "vite --config vite.config.ts --port 3000",
    "start:admin_frontend": "vite --config vite.config.ts --port 3001",
    "start:stats_frontend": "vite --config vite.config.ts --port 3002",
    "start:backend": "mo-dev --generate --deploy -y",
    "start": "run-p start:frontend start:admin_frontend start:stats_frontend start:backend",
    "frontend": "vite --config vite.config.ts --port 3000",
    "admin_frontend": "vite --config vite.config.ts --port 3001",
    "stats_frontend": "vite --config vite.config.ts --port 3002",
    "backend": "mo-dev --generate --deploy -y",
    "build:frontend": "BUILD_TARGET=frontend vite build --config vite.config.ts --mode frontend",
    "build:admin": "BUILD_TARGET=admin vite build --config vite.config.ts --mode admin",
    "build:stats": "BUILD_TARGET=stats vite build --config vite.config.ts --mode stats",
    "build": "tsc && npm run build:frontend && npm run build:admin && npm run build:stats && npm run copy-well-known",
    "copy-well-known": "copyfiles -u 1 src/.well-known/**/* dist/",
    "sources": "mops sources",
    "postinstall": "mops install"
  },
  "dependencies": {
    "@dfinity/agent": "^2.1.1",
    "@dfinity/auth-client": "^2.1.1",
    "@dfinity/candid": "^2.1.1",
    "@dfinity/identity": "2.1.1",
    "@dfinity/ledger-icp": "2.5.0",
    "@dfinity/principal": "^2.1.1",
    "@dfinity/utils": "2.5.0",
    "@nfid/identitykit": "^0.0.0-alpha.11",
    "@open-ic/openchat-xframe": "^1.0.6",
    "@peculiar/webcrypto": "1.5.0",
    "@types/react-datepicker": "^7.0.0",
    "chart.js": "^4.4.4",
    "check-peer-dependencies": "^4.3.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-datepicker": "^7.3.0",
    "react-device-detect": "^2.2.3",
    "react-dom": "^18.3.1",
    "react-modal": "^3.16.1",
    "react-responsive": "^10.0.0",
    "react-router-dom": "^6.26.2",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "usergeek-ic-js": "^1.0.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.8",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.0",
    "@types/react-modal": "^3.16.3",
    "@vitejs/plugin-react": "^4.3.1",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.4.5",
    "ic-mops": "^1.0.0",
    "mo-dev": "^0.13.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.78.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.6",
    "vite-plugin-environment": "^1.1.3",
    "vite-plugin-static-copy": "^1.0.6"
  },
  "resolutions": {
    "@dfinity/candid": "2.0.0"
  }
}
