{
  "canisters": {
    "backend": {
      "type": "motoko",
      "main": "backend/Backend.mo",
      "declarations": {
        "node_compatibility": true
      },
      "settings": {
        "network": ["http_request"]
      }
    },
    "frontend": {
      "dependencies": [
        "backend"
      ],
      "type": "assets",
      "source": [
        "dist/frontend"
      ]
    },
    "admin_frontend": { 
      "dependencies": [
        "backend"
      ],
      "type": "assets",
      "source": [
        "dist/admin"
      ]
    }
  },
  "defaults": {
    "build": {
      "packtool": "npm run --silent sources"
    }
  },
  "output_env_file": ".env",
  "version": 2
}
